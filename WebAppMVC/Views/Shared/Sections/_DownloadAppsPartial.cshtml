@model DownloadAppsViewModel

@{
    var themeMode = Context.Request.Cookies["ThemeMode"] ?? "light";
    var isDark = (themeMode == "dark") ? true : false;
}

<section id="@Model.Id" class="download-apps">
    <div class="container">
        <img class="phone-app" src="@Model.PhoneApp.ImageUrl" alt="@Model.PhoneApp.AltText">
        <div class="apps">
            <h1>@Model.Title</h1>

            @if (Model.Apps != null)
            {
                @foreach (var apps in Model.Apps)
                {
                    <div class="app-name">
                        <div>
                            <p class="light-text">@apps.LightText</p>
                            <div class="stars">
                                @foreach (var star in apps.Stars)
                                {
                                    <i class="@star"></i>
                                }
                            </div>
                            <h4>@apps.SmallTitle</h4>
                            <p>@apps.Text</p>
                        </div>
                        <a href="#">
                            @if (apps.LightText == "App Store")
                            {
                                <img src="~/images/@(isDark ? "appstoredark.svg" : "appstore.svg" )" alt="@Model.AppStore.AltText">
                            }
                            else if (apps.LightText == "Google Play")
                            {
                                <img src="~/images/@(isDark ? "googleplaydark.svg" : "googleplay.svg" )" alt="@Model.GooglePlay.AltText">
                            }
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</section>
