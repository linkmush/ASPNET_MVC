@model NewsletterViewModel

<section id="@Model.Id" class="newsletter">
    <div class="container">
        <div class="content">
            <h1>@Model.Title</h1>
            <img src="@Model.Arrow.ImageUrl" alt="@Model.Arrow.AltText">
        </div>

        <form id="registerNewsletter" novalidate>
            <div class="choose-newsletter">
                <h5>Sign up for<br> Newsletters</h5>
                <div class="checkboxes">
                    @if (Model.Newsletter != null)
                    {
                        @foreach (var newsletter in Model.Newsletter)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="@newsletter.Id">
                                <label class="form-check-label" for="dailyNewsletter">
                                    @newsletter.LabelText
                                </label>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="subscribe">
                <i class="fa-regular fa-envelope"></i>
                <input type="email" id="email" name="Email" class="form-input" placeholder="Your Email">
                <button type="submit" class="btn-theme">@Model.Link.LinkText</button>
            </div>

            <p class="terms-and-privacy">* Yes, I agree to the <a href="#">terms</a> and <a href="#">privacy policy.</a></p>
        </form>
    </div>
</section>
